<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TauriArmory.Views.CharInfoPage">
    <StackLayout BackgroundColor="SaddleBrown">

        <Label Text="Character information"
               FontSize="Large"
               TextColor="FloralWhite"
               HorizontalOptions="Center"></Label>
        
        <Label HorizontalOptions="Start"
               Text="Level"
               TextColor="FloralWhite">

        </Label>
        <Entry x:Name="fillableLevel"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               Placeholder="Character level"
               TextColor="FloralWhite"></Entry>

        <Label HorizontalOptions="Start"
               Text="Class"
               TextColor="FloralWhite">

        </Label>
        <Entry x:Name="fillableClass"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalOptions="Center"
               Placeholder="Character class"
               TextColor="FloralWhite"></Entry>

        <Label HorizontalOptions="Start"
               Text="Achievement points"
               TextColor="FloralWhite">

        </Label>
        <Entry x:Name="fillablePts"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Placeholder="Achievement points"
               TextColor="FloralWhite"></Entry>


    </StackLayout>
    
</ContentPage>